---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import classes from "../styles/layouts/BlogPost.module.scss";

type Props = CollectionEntry<"posts">["data"];

// #TODO: look up default values to see if this is correct:
const { title, summary, pubDate, heroImage, tags, relatedPosts = null } =
	Astro.props;
---

<BaseLayout>
	<article>
		<h1 class={classes["post-title"]}>{title}</h1>
		<div class="post-info">
			<img src="" alt="" class="post-author-img" /><span class="post-author-name"></span>
			<FormattedDate date={pubDate} />
		</div>
		{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
		<!-- <hr /> -->
		<slot />
		<p class="post-tags">Tagged as:
		{tags && tags.map(tag => <a href={`/tags/${tag}`}>{tag}</a>)}</p>
	</article>
</BaseLayout>
