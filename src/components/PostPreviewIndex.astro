---
import classes from "../styles/components/PostPreviewIndex.module.scss";
import FormattedDate from "../components/FormattedDate.astro";


const { title, summary, pubDate, heroImage, tags, slug } = Astro.props;
---

  <div class={classes["post-item"]}>
    <h1 class={classes["post-title"]}>{title}</h1>
    <div class="post-info">
      <img src="" alt="" class="post-author-img" /><span
        class="post-author-name"></span>
      <FormattedDate date={pubDate} />
    </div>
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <p>{summary}</p>
    <a href={`${slug}`}>Continue reading...</a>
    <hr />
    <p class="post-tags">
      Tagged as:
      {tags && tags.map((tag: String) => <a href={`/tags/${tag}`}>{tag}</a>)}
    </p>
  </div>